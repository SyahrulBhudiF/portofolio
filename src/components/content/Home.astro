---
import SliderHome from '../SliderHome';
import rinGif from '@/assets/rin.gif';
import ParticlesHome from '../ParticlesHome';
import {Image} from 'astro:assets';
import {FileUser} from "lucide-react";
import React from "react";
import cv from "@/assets/cv.pdf";
---

<section class="w-full h-screen overflow-hidden relative" id="home">
    <ParticlesHome client:load/>
    <div class="flex justify-center h-full items-center p-16 z-10 max-lg:flex-col-reverse max-md:gap-4 max-lg:gap-10 max-lg:p-8">
        <div class="2xl:w-1/2 max-2xl:w-full max-xl:w-1/2 max-lg:w-full max-lg:px-10 max-md:px-0">
            <h1 class="text-6xl font-bold text-white max-md:text-4xl max-sm:text-3xl text-wrap">Hello, I'm <span
                    class="text-[#CDA6ED]">
                <span class="text-retro"><</span>Syahrul<span
                    class="text-retro">/></span>
                <br class="max-lg:hidden"> Bhudi Ferdiansyah</span>
            </h1>
            <div class="text-3xl text-white flex gap-3 items-center max-sm:text-lg">
                <p class="whitespace-nowrap">I'm a</p>
                <SliderHome client:load/>
            </div>
            <a
                    href={cv}
                    download
                    class="px-6 py-2 w-fit mt-8 font-bold max-sm:p-3 max-sm:text-sm bg-[#CDA6ED] text-white rounded-md flex gap-2 items-center transition-transform duration-300 ease-in-out hover:-translate-y-1"
            >
                Download My CV
                <FileUser size={20}/>
            </a>
        </div>
        <div class="rounded border-purple-800 border-2 p-2 shadow-lg shadow-purple-900 max-2xl:w-full">
            <Image src={rinGif} alt="Rin Gif" class="rounded max-2xl:w-full object-fill" loading="eager" fetchpriority={"high"}/>
        </div>
    </div>
</section>
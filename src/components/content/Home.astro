<section
    id="home"
    class="min-h-screen min-h-dvh flex items-center justify-center relative pt-20"
>
    <div class="max-w-[1100px] mx-auto px-6 w-full">
        <div
            class="flex flex-col items-center text-center gap-6 max-w-3xl mx-auto"
        >
            <span
                class="text-sm font-medium text-[var(--iris)] tracking-widest uppercase opacity-0 animate-fade-in-up"
            >
                Hello, I'm
            </span>

            <h1
                class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-[var(--text)] tracking-tight leading-[1.1] opacity-0 animate-fade-in-up delay-100"
            >
                Syahrul<span class="text-[var(--iris)]">.</span>
                <br class="hidden sm:block" />
                <span class="text-[var(--subtle)]">Bhudi Ferdiansyah</span>
            </h1>

            <p
                class="text-xl sm:text-2xl text-[var(--subtle)] font-normal opacity-0 animate-fade-in-up delay-200"
            >
                Full-Stack Developer
            </p>

            <div
                class="flex flex-wrap items-center justify-center gap-4 mt-4 opacity-0 animate-fade-in-up delay-300"
            >
                <a
                    href="assets/cv_syahrul.pdf"
                    download="Syahrul_CV.pdf"
                    class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--iris)] text-[var(--base)] font-medium rounded-lg hover:opacity-90 transition-opacity"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
                        <path d="M15 18a3 3 0 1 0-6 0"></path>
                        <path
                            d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7z"
                        ></path>
                        <circle cx="12" cy="13" r="2"></circle>
                    </svg>
                    Download CV
                </a>
                <a
                    href="#projects"
                    class="inline-flex items-center gap-2 px-6 py-3 border border-[var(--highlight-med)] text-[var(--text)] font-medium rounded-lg hover:border-[var(--iris)] hover:text-[var(--iris)] transition-all"
                >
                    View Projects
                </a>
            </div>
        </div>
    </div>

    <div
        class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-[var(--muted)] opacity-0 animate-fade-in-up delay-500"
    >
        <span class="text-xs uppercase tracking-widest">Scroll</span>
        <div
            class="w-5 h-8 border-2 border-[var(--highlight-med)] rounded-full relative"
        >
            <div
                class="absolute top-1.5 left-1/2 -translate-x-1/2 w-1 h-2 bg-[var(--muted)] rounded-full animate-float"
            >
            </div>
        </div>
    </div>
</section>

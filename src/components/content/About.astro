---
import AboutMotion from '../AboutMotion';
import TechStack from '../TechStack.astro';
import StarBackground from '../StarBackground';

const techStack = [
    "Laravel",
    "Golang",
    "NextJS",
    "SvelteKit",
    "Astro",
    "React",
    "Javascript",
    "Typescript",
    "Bun",
    "PHP",
    "Java",
    "Python",
    "TailwindCSS",
    "bootstrap",
    "Prisma",
    "MySQL",
    "PostgreSQL",
    "Redis",
    "Docker"
];
---
<section
        class="w-full h-screen max-lg:h-fit bg-gradient-to-b from-black via-gray-950 to-gray-900 px-16 max-sm:px-8 flex justify-center relative overflow-hidden"
        id="about"
>
    <StarBackground client:load/>
    <AboutMotion client:load>
        {
            techStack.map((tech: string) => (
                    <TechStack tech={tech} size="medium"/>
            ))
        }
    </AboutMotion>
    <!--<MountainSVG client:load/>-->
</section>
